<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.busguideapplication">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-feature android:name="android.hardware.bluetooth_le"  android:required="true" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".Registro" android:screenOrientation="portrait"/>
        <activity android:name=".Iniciar" android:screenOrientation="portrait"/>
        <activity android:name=".Connexion" android:screenOrientation="portrait"/>
        <activity android:name=".Configuracion" android:screenOrientation="portrait"/>
        <activity android:name=".Favorito" android:screenOrientation="portrait"/>
        <activity android:name=".Fin" android:screenOrientation="portrait"/>
        <activity android:name=".Beacon" android:screenOrientation="portrait"/>
        <activity android:name=".Inicio" android:screenOrientation="portrait"/>
        <activity android:name=".Ruta" android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>